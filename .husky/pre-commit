#!/bin/sh

# Function to ask question and get response using whiptail
yes_or_no() {
  if whiptail --title "$1" --yesno "$1" 8 78; then
    return 0
  else
    echo "Aborted"
    return 1
  fi
}

# First question
if ! yes_or_no "Have you reviewed your code?"; then
  echo "Please review your code before committing."
  exit 1
fi

# Second question
if ! yes_or_no "Have you tested in the browser that everything works as intended?"; then
  echo "Please test your changes before committing."
  exit 1
fi

exit 0